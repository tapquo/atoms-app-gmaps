@import "../../../style/__vendor.styl"

[data-atom=gmap]
  position: relative
  display: block
  background-color: #ddd
  display-flex()
  justify-content center
  align-content center
  align-items center
  &.big
    height: 12rem
  &.small
    height: 6rem
  &:not(.full):not(.big):not(.small)
    height: 8rem
  > .icon
    display: block
    font-size: SIZE = 3rem
    width: SIZE
    height: SIZE
    color: WHITE

[data-atom=gmap].full, [data-organism=section][data-extend=gmap] > [data-atom=gmap]
  position: absolute !important
  width: 100% !important
  height: 100% !important

[data-organism=section][data-extend=gmap]
  position: relative
  > [data-atom=gmap]
    z-index: 0
  > [data-atom=button], > [data-molecule=form]
    z-index: 1
    position: absolute !important
  AIR = 0.75rem
  > [data-atom=button]
    top: 0
    margin: AIR
  > [data-molecule=form]
    right: 0
    bottom: 0
    left: 0
    margin: AIR
    > [data-atom=input]
      background-color: WHITE
      padding-left: .5rem
      padding-right: .5rem
      box-shadow: none !important
